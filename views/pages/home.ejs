<%- include('../partials/threeCanvas') %>

<div class="row mt-4">
  <% artworks.forEach(art => { %>
    <div class="col-md-4 mb-4">
      <div class="card artwork-card">
        <img src="<%= art.image_id ? `https://www.artic.edu/iiif/2/${art.image_id}/full/843,/0/default.jpg` : '' %>" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= art.title %></h5>
          <p class="card-text"><%= art.artist_display %></p>
          <a href="/artwork/<%= art.id %>" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
  <% }); %>
</div>